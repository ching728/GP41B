<%- include('partials/header') %>

<div class="container home-container">
  <div class="hero-section text-center">
    <h1 class="hero-title">
      <i class="fas fa-check-circle"></i>
      Welcome to Todo App
    </h1>
    <p class="hero-subtitle">Organize your tasks and boost your productivity</p>
    
    <div class="hero-buttons">
      <% if (!user) { %>
        <a href="/auth/login" class="btn btn-primary btn-lg">
          <i class="fas fa-sign-in-alt"></i> Login
        </a>
        <a href="/auth/register" class="btn btn-secondary btn-lg">
          <i class="fas fa-user-plus"></i> Register
        </a>
      <% } else { %>
        <a href="/tasks" class="btn btn-primary btn-lg">
          <i class="fas fa-tasks"></i> View My Tasks
        </a>
        <form action="/auth/logout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-secondary btn-lg">
            <i class="fas fa-sign-out-alt"></i> Logout
          </button>
        </form>
      <% } %>
    </div>
  </div>

  <div class="features-section">
    <div class="row">
      <div class="col-md-4 feature-card">
        <i class="fas fa-plus-circle"></i>
        <h3>Add Tasks</h3>
        <p>Create new tasks with titles, descriptions, due dates, and priorities</p>
      </div>
      <div class="col-md-4 feature-card">
        <i class="fas fa-edit"></i>
        <h3>Edit & Update</h3>
        <p>Modify your tasks and track their progress with status updates</p>
      </div>
      <div class="col-md-4 feature-card">
        <i class="fas fa-search"></i>
        <h3>Search & Filter</h3>
        <p>Find tasks quickly with search and filter by priority</p>
      </div>
    </div>
  </div>
</div>

